<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EduApp"
        tools:targetApi="31">

        <!-- Splash Screen (Launcher) -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.EduApp.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Mode Selection Screen -->
        <activity
            android:name=".activities.ModeSelectionActivity"
            android:exported="false"
            android:label="@string/mode_selection_title" />

        <!-- Class Selection Screen -->
        <activity
            android:name=".activities.ClassSelectionActivity"
            android:exported="false"
            android:label="@string/class_selection_title" />

        <!-- Books Screen -->
        <activity
            android:name=".activities.BooksActivity"
            android:exported="false"
            android:label="@string/books_title" />

        <!-- Chapters Screen -->
        <activity
            android:name=".activities.ChaptersActivity"
            android:exported="false"
            android:label="@string/chapters_title" />

        <!-- Audio Player Screen (for blind users) -->
        <activity
            android:name=".activities.AudioPlayerActivity"
            android:exported="false"
            android:label="@string/audio_player_title"
            android:screenOrientation="portrait" />

        <!-- Video Player Screen (for deaf users) -->
        <activity
            android:name=".activities.VideoPlayerActivity"
            android:exported="false"
            android:label="@string/video_player_title"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.EduApp" />

        <!-- Quiz Activity -->
        <activity
            android:name=".activities.QuizActivity"
            android:exported="false"
            android:label="@string/quiz_title"
            android:screenOrientation="portrait" />

        <!-- Quiz Result Activity -->
        <activity
            android:name=".activities.QuizResultActivity"
            android:exported="false"
            android:label="@string/quiz_result_title"
            android:screenOrientation="portrait" />

        <!-- Profile Activity -->
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false"
            android:label="@string/profile_title"
            android:screenOrientation="portrait" />

    </application>
</manifest>