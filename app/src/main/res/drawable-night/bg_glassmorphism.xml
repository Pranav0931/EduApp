<?xml version="1.0" encoding="utf-8"?>
<!-- Night mode glassmorphism background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient for dark mode -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="135"
                android:startColor="#1A237E"
                android:centerColor="#311B92"
                android:endColor="#004D40"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Semi-transparent overlay for glass effect -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#40000000" />
        </shape>
    </item>
    
    <!-- Subtle border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#20FFFFFF" />
        </shape>
    </item>
</layer-list>
