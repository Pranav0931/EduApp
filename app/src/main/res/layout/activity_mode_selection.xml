<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".activities.ModeSelectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <ImageButton
            android:id="@+id/btn_parent_zone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_lock"
            android:tint="@color/gray"
            android:contentDescription="Parent Zone"
            android:layout_marginEnd="-16dp"
            android:layout_marginTop="-16dp"
            tools:ignore="UseAppTint" />

        <!-- Spacer to push buttons to center-bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Audio Mode Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/audioModeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:text="@string/audio_mode_button"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:background="@drawable/bg_mode_button"
            android:padding="24dp"
            android:gravity="center"
            android:contentDescription="@string/audio_mode_description"
            app:backgroundTint="@color/secondary_purple"
            app:cornerRadius="16dp"
            tools:ignore="VisualLintButtonSize" />

        <!-- Spacer between buttons -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Video Mode Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/videoModeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:text="@string/video_mode_button"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:background="@drawable/bg_mode_button"
            android:padding="24dp"
            android:gravity="center"
            android:contentDescription="@string/video_mode_description"
            app:backgroundTint="@color/secondary_purple"
            app:cornerRadius="16dp"
            tools:ignore="VisualLintButtonSize" />

        <!-- Spacer at bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Profile Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profileFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="96dp"
        android:src="@drawable/ic_profile"
        android:contentDescription="@string/profile_title"
        app:fabSize="mini"
        app:backgroundTint="@color/surface_variant"
        app:tint="@color/primary"
        app:elevation="4dp" />

    <!-- EduAI Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/eduaiFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/ic_eduai_avatar"
        android:contentDescription="@string/eduai_name"
        app:fabSize="normal"
        app:backgroundTint="@color/eduai_primary"
        app:tint="@null"
        app:elevation="6dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>