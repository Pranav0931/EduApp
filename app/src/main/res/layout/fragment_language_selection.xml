<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_primary">

    <!-- Welcome Icon -->
    <ImageView
        android:id="@+id/ivLanguageIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_language"
        android:contentDescription="@string/language_selection_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Choose Your Language"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLanguageIcon" />

    <TextView
        android:id="@+id/tvTitleHindi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="अपनी भाषा चुनें"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:alpha="0.9"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <!-- Language Options Container -->
    <LinearLayout
        android:id="@+id/languageOptionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTitleHindi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Hindi Option -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHindi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="3dp"
            app:strokeColor="@android:color/transparent"
            android:minHeight="80dp"
            android:focusable="true"
            android:clickable="true"
            android:contentDescription="हिंदी भाषा चुनें">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="हिंदी"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hindi"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary" />

                <ImageView
                    android:id="@+id/ivHindiCheck"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"
                    android:contentDescription="Selected"
                    app:tint="@color/primary_magenta"
                    tools:visibility="visible" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- English Option -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="3dp"
            app:strokeColor="@android:color/transparent"
            android:minHeight="80dp"
            android:focusable="true"
            android:clickable="true"
            android:contentDescription="Select English language">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="English"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="अंग्रेज़ी"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary" />

                <ImageView
                    android:id="@+id/ivEnglishCheck"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"
                    android:contentDescription="Selected"
                    app:tint="@color/primary_magenta"
                    tools:visibility="visible" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Marathi Option -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMarathi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="3dp"
            app:strokeColor="@android:color/transparent"
            android:minHeight="80dp"
            android:focusable="true"
            android:clickable="true"
            android:contentDescription="मराठी भाषा निवडा">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="मराठी"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marathi"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary" />

                <ImageView
                    android:id="@+id/ivMarathiCheck"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"
                    android:contentDescription="Selected"
                    app:tint="@color/primary_magenta"
                    tools:visibility="visible" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:text="Continue / जारी रखें"
        android:textSize="18sp"
        android:textStyle="bold"
        android:enabled="false"
        app:cornerRadius="28dp"
        app:backgroundTint="@color/primary_magenta"
        android:contentDescription="Continue to next screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Speaker Button for TTS -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_volume_up"
        android:contentDescription="Speak options aloud"
        app:backgroundTint="@android:color/white"
        app:tint="@color/primary_magenta"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
