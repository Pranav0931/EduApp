<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Quiz Icon -->
        <ImageView
            android:id="@+id/iv_quiz_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_quiz"
            android:contentDescription="@null"
            app:tint="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Quiz Title -->
        <TextView
            android:id="@+id/tv_quiz_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Chapter 1: Introduction Quiz"
            app:layout_constraintStart_toEndOf="@id/iv_quiz_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_quiz_icon" />

        <!-- Question Count -->
        <TextView
            android:id="@+id/tv_question_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_question"
            tools:text="10 Questions"
            app:layout_constraintStart_toEndOf="@id/iv_quiz_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_quiz_title" />

        <!-- Duration -->
        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_timer"
            tools:text="15 min"
            app:layout_constraintStart_toEndOf="@id/tv_question_count"
            app:layout_constraintTop_toBottomOf="@id/tv_quiz_title" />

        <!-- Chips Row -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_quiz_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_question_count">

            <!-- Difficulty Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Chip.Suggestion"
                tools:text="Easy" />

            <!-- AI Generated Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_ai_generated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:text="@string/ai_generated"
                app:chipIcon="@drawable/ic_ai"
                android:visibility="gone" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Play Icon -->
        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_play"
            android:contentDescription="@string/start_quiz"
            app:tint="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
