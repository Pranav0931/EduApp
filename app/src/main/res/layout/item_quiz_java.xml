<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:focusable="true"
    android:clickable="true"
    android:contentDescription="@string/quiz_card_description">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_quiz_card_gradient">

        <!-- Quiz Icon -->
        <ImageView
            android:id="@+id/ivQuizIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_quiz"
            android:background="@drawable/bg_quiz_icon_circle"
            android:padding="14dp"
            android:importantForAccessibility="no"
            app:tint="@android:color/white" />

        <!-- Quiz Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvQuizTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="Quiz Title" />

                <!-- AI Badge -->
                <ImageView
                    android:id="@+id/ivAiBadge"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_ai"
                    android:visibility="gone"
                    android:contentDescription="@string/ai_generated"
                    app:tint="@android:color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvQuizDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_white"
                android:alpha="0.9"
                android:text="Quiz description"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvQuestionCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="10 Questions"
                    android:drawableStart="@drawable/ic_question"
                    android:drawableTint="@android:color/white"
                    android:drawablePadding="4dp" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.9"
                    android:text="15 min"
                    android:layout_marginStart="16dp"
                    android:drawableStart="@drawable/ic_time"
                    android:drawableTint="@android:color/white"
                    android:drawablePadding="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow -->
        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_right"
            android:background="@drawable/bg_badge_light"
            android:padding="4dp"
            android:contentDescription="@string/start_quiz"
            app:tint="@color/primary_magenta" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
