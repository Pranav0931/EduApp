<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subtitleContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:padding="16dp"
    android:visibility="gone"
    tools:visibility="visible">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/subtitleCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginHorizontal="32dp"
        app:cardBackgroundColor="#CC000000"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Speaker indicator (for deaf users) -->
            <TextView
                android:id="@+id/speakerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/design_default_color_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="[Teacher]"
                tools:visibility="visible" />

            <!-- Main subtitle text -->
            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:lineSpacingMultiplier="1.2"
                android:importantForAccessibility="yes"
                tools:text="This is a sample subtitle for deaf users" />

            <!-- Sound effect indicator -->
            <LinearLayout
                android:id="@+id/soundEffectIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    android:contentDescription="Sound effect"
                    app:tint="#FFEB3B" />

                <TextView
                    android:id="@+id/soundEffectText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#FFEB3B"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    tools:text="[Bell ringing]" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
