<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/visualAlertContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:visibility="gone"
    tools:visibility="visible">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/alertCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"
        tools:cardBackgroundColor="#4CAF50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Alert icon -->
            <ImageView
                android:id="@+id/alertIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:importantForAccessibility="no"
                app:tint="@android:color/white"
                tools:src="@android:drawable/ic_dialog_info" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Alert title -->
                <TextView
                    android:id="@+id/alertTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Success!" />

                <!-- Alert message -->
                <TextView
                    android:id="@+id/alertMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:alpha="0.9"
                    tools:text="Your answer was correct!" />

            </LinearLayout>

            <!-- Dismiss button -->
            <ImageButton
                android:id="@+id/alertDismissButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Dismiss alert"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@android:color/white" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
