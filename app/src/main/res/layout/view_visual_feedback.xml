<?xml version="1.0" encoding="utf-8"?>
<!-- Visual Alert overlay for deaf users -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardVisualAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp">

            <TextView
                android:id="@+id/tvAlertIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:textSize="24sp"
                tools:text="✓" />

            <TextView
                android:id="@+id/tvAlertMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="280dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurface"
                tools:text="सफलतापूर्वक सहेजा गया" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Subtitle container at bottom -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="80dp"
        android:visibility="gone"
        app:cardBackgroundColor="#CC000000"
        app:cardCornerRadius="16dp"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <TextView
                android:id="@+id/tvSubtitleSpeaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="#80FFFFFF"
                android:visibility="gone"
                tools:text="[शिक्षक]"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvSubtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:text="आज हम गणित के बारे में सीखेंगे" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</merge>
