<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night/dark mode -->
    <style name="Base.Theme.EduApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_magenta</item>
        <item name="colorPrimaryDark">@color/primary_magenta_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_purple</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_white</item>
        <item name="colorSurface">@color/background_white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_magenta</item>
        <item name="android:navigationBarColor">@color/background_white</item>
        
        <!-- Window properties -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>
</resources>